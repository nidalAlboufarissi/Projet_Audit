@model IEnumerable<Projet_Audit.Models.Question>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

@using (Html.BeginForm("Create", "Reponses", FormMethod.Post))
{
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Risque.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainQuestion)
            </th>
            <th>
                Votre Réponse
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Risque.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MainQuestion)
                </td>
                <td>
                    @Html.RadioButton("reponse" + item.Id_question, "oui") oui
                    @Html.RadioButton("reponse" + item.Id_question, "non") non

                </td>

            </tr>
        }

    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Valider" class="btn btn-default" />
        </div>
    </div>
}
